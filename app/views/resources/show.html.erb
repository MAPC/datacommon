<div>
  <h2>title: <%= @resource.title %></h2>
  <hr>
  <p>
    <%= link_to "open", @resource.attachment %> |
    <%= link_to "edit", edit_resource_path(@resource) %> |
    <%= link_to "delete", resource_path(@resource), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %> |
    <%= link_to "url", @resource.attachment %>
  </p>
  <hr>
    <p>url: <%= @resource.url %></p>
    <p>media_type: <%= @resource.media_type %></p>
    <p>year_published: <%= @resource.year_published %></p>
    <p>month_published: <%= @resource.month_published %></p>

  <% if @image_thumbnail %>
    <p>preview </p>
    <%= link_to image_tag(@image_thumbnail), @resource.attachment %>
  <% else %>
    <%= link_to image_tag(@resource.attachment.preview(resize: "300x300")), @resource.attachment %>
  <% end %>
    <p>download</p>
    <%= link_to image_tag(@resource.attachment.preview(resize: "300x300")), rails_blob_path(@resource.attachment, disposition: :attachment) %>
  <hr>
</div>
